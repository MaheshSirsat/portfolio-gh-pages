<c:FragmentDefinition
    xmlns="sap.uxap"
    xmlns:c="sap.ui.core"
    xmlns:m="sap.m"
    xmlns:l="sap.ui.layout.form"
>
    <ObjectPageSection
        titleUppercase="false"
        title="Professional Experience"
        importance="Medium"
    >
        <subSections>
            <ObjectPageSubSection
             mode="Expanded"
                title="IBM"
                titleUppercase="false"
            >
                <blocks>
                    <m:VBox class="sapUiMediumMargin">
                        <l:SimpleForm
                            layout="ResponsiveGridLayout"
                            editable="false"
                        >
                            <m:Label wrapping="true" text="Organization" />
                            <m:Text wrapping="true" text="IBM" />
                            <m:Label wrapping="true" text="Duration" />
                            <m:Text wrapping="true" text="October 2023 - Present" />
                            <m:Label wrapping="true" text="Role" />
                            <m:Text wrapping="true" text="SAP UI5 / Fiori BTP Consultant" />
                            <m:Label wrapping="true" text="Location" />
                            <m:Text wrapping="true" text="Ahmedabad, Gujarat" />
                        </l:SimpleForm>
                    </m:VBox>
                </blocks>
            </ObjectPageSubSection>
            <ObjectPageSubSection>
                <blocks>
                    <m:VBox />
                </blocks>
            </ObjectPageSubSection>
        </subSections>
    </ObjectPageSection>
</c:FragmentDefinition>
